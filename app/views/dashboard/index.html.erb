<div class="row">
  <div class="col-xs-12">
    <div class="btn-group tracker-dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        Choose a tracker <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to "All", dashboard_path %>
        <li>
        <li class="divider"></li>
        <% Tracker.all.each do |t| %>
          <li>
            <%= link_to t.name, new_tracker_achievement_path(t) %>
          </li>
        <% end %>
      </ul>
    </div>

    <hr>

    <ul class="activity-list">
      <%= render @achievements %>
    </ul>
  </div>
</div>
