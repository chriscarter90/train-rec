    <div class="btn-group tracker-dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        Choose a tracker <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to "All", dashboard_path %>
        </li>
        <li class="divider"></li>
        <% current_user.trackers.all.each do |t| %>
          <% if t.trashed_at == nil %>
            <li>
              <%= link_to t.name, new_tracker_achievement_path(t) %><%= t.trashed_at %><%= t.learner_id %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
    
    <%= link_to new_tracker_path, class: 'btn-action' do %>
      <span class="fui-plus-circle pull-right"></span>
    <% end %>