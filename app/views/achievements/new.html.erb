<% content_for :page_title, "New Achievement" %>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <% tracker = @tracker.decorate %>
    <div>
      <h3><%= tracker.name %></h3>

      <%= tracker.description %>

      <h5>Describe what you did:</h5>

      <%= form_for resource, url: resource_url, class: "form-horizontal" do |f| %>
        <%= render 'form', :f => f %>
      <% end %>
    </div>
  </div>
  <div class="col-xs-12 col-md-6">

    <hr>

  <ul class="activity-list">
    <%= render @achievements.compact %>
  </ul>
</div>
