<li class="activity">
  <%= form_for achievement, remote: true do |f| %>
    <span class="label label-info pull-right achievement-date"><%= achievement.created_at %></span>

    <p><%= achievement.description %></p>

    <!-- Display uploaded image thumbnail -->
    <%= link_to achievement.asset.url, data: { lightbox: "achievement_#{achievement.id}"}, rel: "lightbox" do %>
      <%= image_tag achievement.asset.thumb.url, class: 'img-thumbnail' %>
    <% end if achievement.asset.url %>

    <div class="clearfix">
      <div class="pull-right">
        <%= link_to '#', class: 'btn btn-primary' do %>
          <span class="icon-pen"></span>
        <% end %>
        <%= link_to achievement_path(achievement), :method => :delete, remote: true, class: 'btn btn-primary' do %>
          <span class="icon-trash"></span>
        <% end %>
      </div>
    </div>
  <% end %>
</li>
