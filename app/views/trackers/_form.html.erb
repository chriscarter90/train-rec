<div class="form-group">

  <%= f.label :name, class: 'mandatory' %>
  <%= f.text_field :name, 
      :placeholder => 'What is the title of your tracker?',
      :required => true,
      :class => 'form-control' %> 
  <%= f.label :description %>
  <%= f.text_area :description, :placeholder => 'Describe the kind of thing you might log against this tracker', class: "form-control", rows: 5 %>
  <%= f.label :focus_id, "Focus" %>
  <%= f.select :focus_id,
                 options_for_select(Focus.select_options),
                 {},
                 {class: 'form-control select select-primary'}
    %>
</div>


<!-- need to split out the form controls so we can re-use them in the inline Achievement Editing -->
<div class="clearfix">
  <%= button_tag(type: 'submit', class: 'btn btn-primary pull-right') do %>
    <span class="icon-checkmark"></span>
  <% end %>
  <%= link_to "Cancel", dashboard_path, class: 'button secondary-button cancel', 
      id: 'tracker_cancel' %>
</div>

<div class='new-tracker-form'>
  <%= render "shared/error_messages", :target => resource %>  

</div>
